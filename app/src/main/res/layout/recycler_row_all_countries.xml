<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:background="#fff"
    android:layoutDirection="ltr">
    <TextView
        android:id="@+id/native_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/native_name"
        android:maxLength="15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/english_name"/>

    <TextView
        android:id="@+id/english_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/english_name"
        android:maxLength="15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/native_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>